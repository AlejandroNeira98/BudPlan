<h1>Add a new transaction</h1>

<%= form_with(model: @deal, url: deals_create_path ) do |form| %>

  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :amount %>
    <%= form.number_field :amount, step: :any %>
  </div>

  <div>
    <p>Select at least one category:</p>
    <br>
    <ul>
      <%= form.collection_check_boxes(:groups, @categories, :id, :name) do |g| %>
        <li>
          <%= g.label { g.check_box + g.text } %>
        </li>
      <% end %>
    </ul>
  </div>
  <%= form.submit "SUBMIT", class:"btn" %>
<% end %>