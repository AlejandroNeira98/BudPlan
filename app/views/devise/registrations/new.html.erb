<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <% f.options[:html][:class] += ' devise-form' %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="devise">
    <div class="field first">
      <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.text_field :name, placeholder: "Full Name", autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.password_field :password, placeholder: "Password #{"(#{@minimum_password_length} chars min)" if @minimum_password_length}", autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", autocomplete: "new-password" %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit "Sign up", class:"btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
