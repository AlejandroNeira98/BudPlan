<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <% f.options[:html][:class] += ' devise-form' %>
  <div class="devise">
    <div class="field first">
      <%= f.email_field :email, placeholder: "Email",autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password" %>
    </div>
  </div>
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
  
  <div class="actions">
    <%= f.submit "Log in", class:"btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
