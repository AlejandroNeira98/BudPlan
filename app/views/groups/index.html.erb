<% @categories.each do |category| %>
  <%= link_to("/groups/show/#{category.id}") do%>
    <div style="display:flex">
      <%= image_tag(category.icon, style:"width:100px; height:100px")%>
      <p> <%= category.name %> </p>
      <p> <%= category.total %> </p>
    </div>
  <% end %>
<% end %>

<%= link_to "add a new category", groups_new_path %>