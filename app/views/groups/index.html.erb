<% @categories.each do |category| %>
  <%= link_to("/groups/show/#{category.id}") do%>
    <div style="display:flex; justify-content: space-between ;height:100px">
    <div style="display:flex; max-height:100%">
      <div style="max-width:100px">
        <%= image_tag(category.icon, style:"width:100%; height:100%")%>
      </div>
    
      <p> <%= category.name %> </p>
    </div>
    <p> $<%= category.total %> </p>
  </div>
  <% end %>
<% end %>

<%= link_to "add a new category", groups_new_path %>