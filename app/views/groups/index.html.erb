<% @categories.each do |category| %>
  <%= link_to("/groups/show/#{category.id}") do%>
    <div class="card">
    <div style="display:flex; max-height:100%">
      <div style="max-width:100px">
        <%= image_tag(category.icon, style:"width:100%; height:100%")%>
      </div>
    
      <p class="content"> <%= category.name %> </p>
    </div>
    <% total = 0.0 %>
    <% category.deals.each do |deal|  %>
      <% total += deal.amount %>
    <% end %>
    <p class="quantity"> $<%= total %> </p>
  </div>
  <% end %>
<% end %>

<%= link_to "add a new category", groups_new_path, class:"btn" %>